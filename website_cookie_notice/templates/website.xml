<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="loader" inherit_id="website.assets_frontend" name="Cookies script loader">
    <xpath expr=".">
        <script type="text/javascript" src="/website_cookie_notice/static/src/js/accept_cookies.js"/>
    </xpath>
</template>


 <template id="message" name="Cookies notice">
    <div id="website_cookie_notice"
         class="container-fluid cc-cookies alert alert-warning fixed-bottom"
         role="alert">
        <div class="container">
            <div class="row">
                <div class="col-sm-10"><img src="/website_cookie_notice/static/src/img/cookie_bite.png" width="30" height="30"/>We use cookies in this website. Read about them in our <a href="/legal/privacy-policy" class="alert-link">privacy policy</a>. To disable them, configure your browser properly. If you keep using this website, you are accepting those.</div>
                <div class="col-sm-2 text-center">
                    <button class="btn btn-primary"><t t-att-value="button_name"/></button>
                </div>
            </div>
        </div>
    </div>
 </template>


<template id="cookiebanner" inherit_id="website.layout">
    <xpath expr="//header" position="before">
        <t t-call="website_cookie_notice.message"/>
    </xpath>
</template>

</odoo>
